@model IEnumerable<RailwayReservationAndManagementSystem.Models.User>
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<link href="~/Content/layoutClient/css/loginStyle.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="~/Content/layoutClient/layoutLogin/css/style.css">

@using (Html.BeginForm("Login", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <section class="ftco-section" style="background-image: url('../../Content/layoutClient/images/banner.jpg');">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <div class="form-group">
                            @Html.TextBox("Name", "", new { @type = "text", @class = "form-control", @placeholder = "Username", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.TextBox("Password", "", new { @type = "password", @class = "form-control", @placeholder = "Password", @required = "required" })
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            @ViewBag.Error
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                        </div>
                        <div class="form-group d-md-flex">
                            <div class="w-50">
                                <label class="checkbox-wrap checkbox-primary">
                                    Remember Me
                                    <input type="checkbox" checked>
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="w-50 text-md-right">
                                <a href="#" style="color: #fff">Forgot Password</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


}
<script src="~/Content/layoutClient/layoutLogin/js/jquery.min.js"></script>
<script src="~/Content/layoutClient/layoutLogin/js/popper.js"></script>
<script src="~/Content/layoutClient/layoutLogin/js/bootstrap.min.js"></script>
<script src="~/Content/layoutClient/layoutLogin/js/main.js"></script>
